pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                // Pull code from GitHub
                git branch: 'master',
                    url: 'https://github.com/venky8924-gif/myjenkins.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                // Example command
                sh 'echo Build completed'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Example test command
                sh 'echo Tests completed'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying to server..."
                // Example deploy command
                sh 'echo Deploy done'
            }
        }
    }
}
